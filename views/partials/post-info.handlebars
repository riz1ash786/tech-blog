<div class="row ">
    <div class="col s12 m6">
      <div class="card ">
        <div class="card-content">
          <span class="card-title"><a href="/post/{{id}}">{{title}}</a></span>
          <p>{{content}}</p>
        </div>
        <div class="card-action">
           <p>Posted by {{user.username}} on {{format_date created_at}}</p>
        </div>
      </div>
    </div>
  </div> 