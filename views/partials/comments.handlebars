      <div class="card-stacked">
        <div class="card-content">
          <p>{{comment_text}}</p>
        </div>
          <div class="card-action">
          <p class="comment-creator">{{user.username}}, {{format_date created_at}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>